# ================================================
# INTRADAY DECISION ENGINE - ENVIRONMENT CONFIG
# ================================================

# Application Environment
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development

# ================================================
# DATABASE CONFIGURATION
# ================================================

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/intraday_decision?retryWrites=true&w=majority
MONGODB_DATABASE=intraday_decision

# ================================================
# FYERS API CREDENTIALS
# ================================================

FYERS_APP_ID=your_fyers_app_id
FYERS_SECRET_KEY=your_fyers_secret_key
FYERS_ACCESS_TOKEN=your_fyers_access_token
FYERS_REDIRECT_URI=http://localhost:3000/api/auth/fyers/callback

# ================================================
# GROQ API (AI Reasoning)
# ================================================

GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-70b-versatile

# ================================================
# SERVICE PORTS
# ================================================

API_GATEWAY_PORT=8080
MARKET_DATA_SERVICE_PORT=8081
OPTION_CHAIN_SERVICE_PORT=8082
RISK_SERVICE_PORT=8083
JOURNAL_SERVICE_PORT=8084
QUANT_ENGINE_PORT=8001
AI_REASONING_SERVICE_PORT=8002
FRONTEND_PORT=3000

# ================================================
# REDIS (OPTIONAL - FOR CACHING)
# ================================================

REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================================
# MARKET DATA CONFIGURATION
# ================================================

# Market hours (IST)
MARKET_START_TIME=09:15
MARKET_END_TIME=15:30

# Evaluation cycle (minutes)
EVALUATION_INTERVAL_MINUTES=3

# Symbols to track
SYMBOLS=NIFTY,BANKNIFTY

# ================================================
# SCORING THRESHOLDS
# ================================================

# Conservative Mode
CONSERVATIVE_SETUP_THRESHOLD=8.0
CONSERVATIVE_NO_TRADE_THRESHOLD=4.0

# Balanced Mode
BALANCED_SETUP_THRESHOLD=7.0
BALANCED_NO_TRADE_THRESHOLD=6.0

# Aggressive Mode
AGGRESSIVE_SETUP_THRESHOLD=6.0
AGGRESSIVE_NO_TRADE_THRESHOLD=7.0

# ================================================
# LOT SIZES
# ================================================

NIFTY_LOT_SIZE=50
BANKNIFTY_LOT_SIZE=15

# ================================================
# BROKERAGE CONFIGURATION
# ================================================

# Angel One
ANGEL_ONE_BROKERAGE_PER_ORDER=20
ANGEL_ONE_STT_PERCENT=0.05
ANGEL_ONE_EXCHANGE_PERCENT=0.05

# FYERS
FYERS_BROKERAGE_PER_ORDER=20
FYERS_STT_PERCENT=0.05
FYERS_EXCHANGE_PERCENT=0.05

# Common Charges
SEBI_CHARGES_PER_CRORE=10
GST_PERCENT=18
STAMP_DUTY_PERCENT=0.003

# ================================================
# LOGGING
# ================================================

LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=false

# ================================================
# SECURITY (FOR FUTURE USE)
# ================================================

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# ================================================
# RATE LIMITING
# ================================================

API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW_MINUTES=1

# ================================================
# FRONTEND CONFIGURATION
# ================================================

NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_ENABLE_SOUND_ALERTS=true
NEXT_PUBLIC_DEFAULT_RISK_MODE=BALANCED
